{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES5", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": ["./app","./scripts", "./test"],
  "exclude": [
    "node_modules", 
    "scripts",
    "test", 
    "config", 
    "**/*.spec.ts",
    "./hardhat.config.ts"
  ],
  "files": ["./hardhat.config.ts"]
}
